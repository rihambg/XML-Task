<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7EAEA"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="cursive"
        android:text="Saisir les coefficients de l'Ã©quation"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_marginBottom="16dp" />

    <!-- Coefficients Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/coefficientA"
            android:layout_width="68dp"
            android:layout_height="54dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#F0B6B7"
            android:hint="a"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="x^2+"
            android:textColor="#000000"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/coefficientB"
            android:layout_width="93dp"
            android:layout_height="54dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#F0B6B7"
            android:hint="b"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="x+"
            android:textColor="#000000"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/coefficientC"
            android:layout_width="83dp"
            android:layout_height="54dp"
            android:backgroundTint="#F0B6B7"
            android:hint="c"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="=0" />
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonSolve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#F0B6B7"
            android:fontFamily="sans-serif-medium"
            android:text="RESOUDRE"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#F0B6B7"
            android:fontFamily="sans-serif-medium"
            android:text="REINITIALISER"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Solutions Label -->
    <TextView
        android:id="@+id/solutionsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="cursive"
        android:text="Solutions"
        android:textColor="#000000"
        android:textSize="18sp" />

    <!-- Solutions Display -->
    <TextView
        android:id="@+id/solutions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textSize="16sp" />

</LinearLayout>
